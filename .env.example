# Railway Environment Variables
# Copy these to Railway dashboard under "Variables" section

# Demo mode (set to false for production)
DEMO=false

# Qdrant configuration
QDRANT_PATH=/app/qdrant_data
QDRANT_COLLECTION=documents
QDRANT_FORCE_RECREATE=false

# Embedding configuration
EMBEDDING_PROVIDER=azure
EMBEDDING_DIM=3072
EMBEDDING_TIMEOUT=10

# Azure OpenAI credentials (required if DEMO=false)
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT_CHAT=gpt-4
AZURE_DEPLOYMENT_EMBED=text-embedding-3-large

# Admin token for protected endpoints
ADMIN_TOKEN=your-secure-random-token-here

# Port (Railway sets this automatically)
PORT=8002
